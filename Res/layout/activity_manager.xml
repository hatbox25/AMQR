<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hatbox.amqr_code.Manager">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/btn_mngTOlogin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableLeft="@drawable/ico_scan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Pindai QR-Code"
                android:id="@+id/btn_mngTOscan"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical|right" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableLeft="@drawable/ico_add"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Daftar Aset Baru"
                android:id="@+id/btn_mngTOadd"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical|right" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableLeft="@drawable/ico_setting"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="atur lokasi &amp; nama"
                android:id="@+id/btn_mngTOset"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical|right" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableLeft="@drawable/ico_help"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="bantuan"
                android:id="@+id/btn_mngTOhelp"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical|right" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keluar"
        android:id="@+id/btn_mngTOlogin"
        android:drawableRight="@drawable/ico_out"
        android:gravity="left|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

</RelativeLayout>
